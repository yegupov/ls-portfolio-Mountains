mixin nav(className, items, activeItem)
  nav(class=`${className}`)
    ul(class=`${className}__list`)
      each item, index in items
        li(class=`${className}__item` + ( (index === activeItem) ? ` ${className}__item_active` : '') )
          a(class=`${className}__link` href='#')= item

mixin skill(name, persentage)
  li.skills-item
    .skills-item-name
      span=name
    svg.persentage(viewBox='0 0 100 100' preserveAspectRatio='none')
      circle.circle.circle-under(cx='50' cy='50' r='40')
      circle.circle.circle-above(cx='50' cy='50' r='40' style='animation-delay: -' + `${persentage}` + 's')

mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className, alt)
  img(src=require(`images/${path}`) class=className alt=alt)
